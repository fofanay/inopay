# ============================================
# INOPAY SOVEREIGN - Variables d'Environnement
# Copiez ce fichier vers .env et configurez vos valeurs
# ============================================

# ===================
# Mode Infrastructure
# ===================
# cloud = Lovable Cloud / Supabase hébergé (par défaut)
# self-hosted = VPS privé avec services locaux
# hybrid = Mix cloud + services locaux
VITE_INFRA_MODE=cloud

# ===================
# Supabase (Cloud Mode)
# ===================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-key
VITE_SUPABASE_PROJECT_ID=your-project-id

# ===================
# Supabase (Self-Hosted Mode)
# ===================
VITE_SELF_SUPABASE_URL=http://localhost:54321
VITE_SELF_SUPABASE_ANON_KEY=your-local-anon-key
VITE_SELF_SUPABASE_SERVICE_KEY=your-local-service-key

# ===================
# MinIO Storage (Self-Hosted)
# ===================
VITE_MINIO_URL=http://localhost:9000
VITE_MINIO_ACCESS_KEY=minioadmin
VITE_MINIO_SECRET_KEY=minioadmin

# ===================
# Ollama AI (Self-Hosted)
# ===================
VITE_OLLAMA_BASE_URL=http://localhost:11434
VITE_OLLAMA_MODEL=llama3

# ===================
# MeiliSearch (Self-Hosted)
# ===================
VITE_MEILISEARCH_URL=http://localhost:7700
VITE_MEILISEARCH_API_KEY=your-meilisearch-key

# ===================
# Soketi Realtime (Self-Hosted)
# ===================
VITE_SOKETI_HOST=localhost
VITE_SOKETI_PORT=6001
VITE_SOKETI_APP_KEY=app-key

# ===================
# SMTP Email (Self-Hosted)
# ===================
VITE_SMTP_HOST=localhost
VITE_SMTP_PORT=587
VITE_SMTP_FROM=noreply@localhost

# ===================
# Domaines Autorisés (séparés par virgule)
# ===================
VITE_AUTHORIZED_DOMAINS=inopay.io,inopay.dev,inopay.app

# ===================
# Backend (Edge Functions / Express)
# ===================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# ===================
# Stripe Payments
# ===================
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ===================
# GitHub Integration
# ===================
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_xxx

# ===================
# AI Services
# ===================
ANTHROPIC_API_KEY=sk-ant-xxx
DEEPSEEK_API_KEY=sk-xxx
LOVABLE_API_KEY=lv-xxx

# ===================
# Email (Resend)
# ===================
RESEND_API_KEY=re_xxx

# ===================
# Twilio SMS
# ===================
TWILIO_ACCOUNT_SID=AC_xxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+1xxx

# ===================
# Database Direct (Self-Hosted)
# ===================
DATABASE_URL=postgresql://inopay:password@localhost:5432/inopay
POSTGRES_USER=inopay
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=inopay

# ===================
# Application
# ===================
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com
